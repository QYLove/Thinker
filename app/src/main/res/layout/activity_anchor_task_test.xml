<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".demo.anchor.AnchorTaskTestActivity">

    <Button
        android:id="@+id/activity_anchor_task_test_execute_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始执行"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_anchor_task_test_execute2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始执行（1.1）"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_anchor_task_test_execute_btn" />

    <TextView
        android:id="@+id/activity_anchor_task_test_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_anchor_task_test_execute2_btn" />

    <TextView
        android:id="@+id/activity_anchor_task_test_text2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_anchor_task_test_text_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>